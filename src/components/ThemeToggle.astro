<button
  id="themeToggle"
  class="theme-toggle"
  aria-label="Cambiar tema"
  onclick="toggleTheme()"
>
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="sun">
    <circle cx="12" cy="12" r="5"/>
    <line x1="12" y1="1" x2="12" y2="3"/>
    <line x1="12" y1="21" x2="12" y2="23"/>
    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
    <line x1="1" y1="12" x2="3" y2="12"/>
    <line x1="21" y1="12" x2="23" y2="12"/>
    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
  </svg>
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="moon">
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
  </svg>
</button>

<style>
  .theme-toggle {
    background: none;
    border: none;
    padding: 8px;
    border-radius: 50%;
    cursor: pointer;
    position: relative;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .sun, .moon {
    position: absolute;
    transition: all 0.3s ease;
    color: var(--header-text);
  }

  /* Tema claro: mostrar sol, ocultar luna */
  :root:not(.dark) .sun {
    opacity: 1;
    transform: scale(1);
  }

  :root:not(.dark) .moon {
    opacity: 0;
    transform: scale(0.7);
  }

  /* Tema oscuro: mostrar luna, ocultar sol */
  :root.dark .sun {
    opacity: 0;
    transform: scale(0.7);
  }

  :root.dark .moon {
    opacity: 1;
    transform: scale(1);
  }

  .theme-toggle:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }
</style>

<script is:inline>
  // Definir la funci√≥n globalmente
  window.toggleTheme = function() {
    const root = document.documentElement;
    root.classList.toggle('dark');
    
    const isDark = root.classList.contains('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  }
</script> 